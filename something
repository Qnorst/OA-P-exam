21//#include <iostream>

using namespace std;

int main()
{
    setlocale(0, "Russian");
    const int N = 10;
    int i, k = 0, s = 1;
    int massiv[N], x = 0, j;
    cout << "Р вЂ™Р Р†Р ВµР Т‘Р С‘РЎвЂљР Вµ 10 РЎвЂ Р ВµР В»РЎвЂ№РЎвЂ¦ РЎвЂЎР С‘РЎРѓР ВµР В»\n";
    for (i = 0; i < N; i++)
        cin >> massiv[i];
    for (i = 0; i < N; i++)
        cout << "\n massiv[" << i << "] = " << massiv[i];


    j = massiv[0];
    for (i = 0; i < N; i++)
    {
        if (massiv[i] < j) {
            j = massiv[i];
            x = i + 1;
        }
    }
    for (i = x; i < N; i++)
        s = s * massiv[i];

    cout << " Proizved=" << s;
}


22//#include <iostream>

using namespace std;

int main()
{
    setlocale(0,"Russian");
    const int N = 5;
    
    int A[N];
    cout << "Р вЂ™Р Р†Р ВµР Т‘Р С‘РЎвЂљР Вµ РЎРѓР В°Р С Р СР В°РЎРѓРЎРѓР С‘Р Р†:" << endl;
    for (int i = 0; i < N; i++)
    {
        cin >> A[i]; 
    }
    for (int i = 0; i < N; i++)
    {
        for (int j = N - 1; j > i; j--)
        {
            if ((!(A[j - 1] >= 0)) && (A[j] >= 0)) 
            {
                swap(A[j - 1], A[j]);
            }
        }
    }

    

    cout << "Р СљР В°РЎРѓРЎРѓР С‘Р Р† Р С—Р С•РЎРѓР В»Р Вµ РЎРѓР Т‘Р Р†Р С‘Р С–Р В° РЎРЊР В»Р ВµР СР ВµР Р…РЎвЂљР С•Р Р†:" << endl;
    for (int i = 0; i < N; i++)
    {
        cout << A[i] << " ";
    }
    cout << endl;
    
    return 0;
}

23//#include <iostream>

using namespace std;

int main()
{
	setlocale(0, "Russian");
	const int N = 8;
	int i, k = 0, s = 0;
	float b = 0;
	int massiv[N], x = 0, j;
	cout<< "Р вЂ™Р Р†Р ВµР Т‘Р С‘РЎвЂљР Вµ 10 РЎвЂ Р ВµР В»РЎвЂ№РЎвЂ¦ РЎвЂЎР С‘РЎРѓР ВµР В»\n";
	for (i = 0; i < N; i++)
		cin>> massiv[i];
	for (i = 0; i < N; i++)
		cout << "\n massiv[" << i << "] = " << massiv[i];

	j = massiv[0];
	for (i = 0; i < N; i++)
	{
		if (massiv[i] < j) {
			j = massiv[i];
			x = i;
		}
		
	}

	for (i = 0; i < x; i++)
	{
		if (massiv[i] > 0)
		{
			s += massiv[i];
		}
			
	}
	float product = 0;
	product = s / x;
	cout << " Proizved=" << product;
	
}

24//#include <iostream>

using namespace std;

int main()
{
	setlocale(0, "Russian");
	const int N = 5;
	int i, k = 0, s = 0;
	float b = 0;
	int massiv[N], x = 0, max;
	cout << "Р вЂ™Р Р†Р ВµР Т‘Р С‘РЎвЂљР Вµ 10 РЎвЂ Р ВµР В»РЎвЂ№РЎвЂ¦ РЎвЂЎР С‘РЎРѓР ВµР В»\n";
	for (i = 0; i < N; i++)
		cin >> massiv[i];
	for (i = 0; i < N; i++)
		cout << "\n massiv[" << i << "] = " << massiv[i];

	max = massiv[0];
	int Sum = 0;
	for (i = 0; i < N; i++)
	{
		if (massiv[i] > max)
		{
			max = massiv[i];
		}

	}
	for (int i = 0; i < N; i++)
	{
		if (massiv[i] + 1 == max)
		{
			Sum = Sum + massiv[i];
		}
	}

	cout << " Proizved=" << Sum;

}

25//#include <iostream>

using namespace std;

int main()
{
	setlocale(0, "Russian");
	const int N = 5;
	int i, k = 0, s = 0,min;
	int massiv[N], x = 0, max;
	cout<< "Р вЂ™Р Р†Р ВµР Т‘Р С‘РЎвЂљР Вµ 10 РЎвЂ Р ВµР В»РЎвЂ№РЎвЂ¦ РЎвЂЎР С‘РЎРѓР ВµР В»\n";
	for (i = 0; i < N; i++)
		cin>> massiv[i];
	for (i = 0; i < N; i++)
		cout << "\n massiv[" << i << "] = " << massiv[i];

	min=max=massiv[0];
	for (i = 0; i < N; i++)
	{
		if (massiv[i] > max) 
		{
			max = massiv[i];
		}
		if (massiv[i] < min)
		{
			min = massiv[i];
		}
		
	}

	double average = 0;

	for (i = min + 1;i!=max;i++)
	{
		average += i;
	}
	double b = average / (max - min-1 );

	cout << "Average = " << b;
	cout << " Proizved=" <<s;
	
}

//26

#include <iostream>
#include <cmath>
/*
* 26. Р вЂќР В°Р Р…Р В° Р СР В°РЎвЂљРЎР‚Р С‘РЎвЂ Р В° A(10,10). Р СџР С•РЎРѓРЎвЂљРЎР‚Р С•Р С‘РЎвЂљРЎРЉ Р Р†Р ВµР С”РЎвЂљР С•РЎР‚ Р вЂ™ Р С‘Р В· РЎРЊР В»Р ВµР СР ВµР Р…РЎвЂљР С•Р Р† Р С—Р С•Р В±Р С•РЎвЂЎР Р…Р С•Р в„– Р Т‘Р С‘Р В°Р С–Р С•Р Р…Р В°Р В»Р С‘. Р вЂ™
Р Р…Р С•Р Р†Р С•Р С Р Р†Р ВµР С”РЎвЂљР С•РЎР‚Р Вµ Р С—Р С•Р СР ВµР Р…РЎРЏРЎвЂљРЎРЉ Р СР ВµРЎРѓРЎвЂљР В°Р СР С‘ Р СР С‘Р Р…Р С‘Р СР В°Р В»РЎРЉР Р…РЎвЂ№Р в„– Р С‘ Р СР В°Р С”РЎРѓР С‘Р СР В°Р В»РЎРЉР Р…РЎвЂ№Р в„– РЎРЊР В»Р ВµР СР ВµР Р…РЎвЂљРЎвЂ№.
*/
int main()
{
	setlocale(LC_ALL, "Russian");
	const int n = 10;


	int arr[n][n], b[n];

	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j < n; j++)
		{
			arr[i][j] = rand() % 50;
			std::cout << arr[i][j] << "\t";
		}
		b[i] = arr[i][n - 1 - i];
		std::cout << std::endl;
	}

	std::cout << "Р вЂ™Р ВµР С”РЎвЂљР С•РЎР‚ Р вЂ™: " << "\n";

	for (int i = 0; i < n; i++)
	{
		std::cout << b[i] << "\n";
	}

	int max = b[0], max_i = 0, min = b[0], min_i = 0;

	for (int i = 0; i < n; i++)
	{
		if (i == 0 || max <= b[i])
		{
			max = b[i];
			max_i = i;
		}
		if (i == 0 || min >= b[i])
		{
			min = b[i];
			min_i = i;
		}
	}

	int k = b[min_i];
	b[min_i] = b[max_i];
	b[max_i] = k;


	std::cout << "Р вЂ™Р ВµР С”РЎвЂљР С•РЎР‚ Р вЂ™: " << "\n";

	for (int i = 0; i < n; i++)
	{
		std::cout << b[i] << "\n";
	}

	return 0;
}

29)#include <iostream>
#include <cmath>
#include <iomanip>
using namespace std;


int main()
{
    setlocale(0, "Russian");
    const int N = 6,M=6;
    int A[N][M], k;
    cout << "Р вЂ™Р Р†Р ВµР Т‘Р С‘РЎвЂљР Вµ Р СР В°РЎвЂљРЎР‚Р С‘РЎвЂ РЎС“:" << endl;
    for (int i = 0; i < N; i++)
    {
        for (int j = 0; j < M; j++)
        {
            cout << '[' << i << ']' << '[' << j << ']';
            cin >> A[i][j];
        }
        cout << endl;
    }
    k = 0;
    for (int j = 0; j < N - 1; j++)
    {
        for (int i = j + 1; i < M; i++)
        {
            if (A[i][j] == A[j][i])
            {
                k++;
            }
        }
    }
    if (k == (pow(N, 2) - N) / 2)
    {
        cout << "РЎРѓР С‘Р СР СР ВµРЎвЂљРЎР‚Р С‘РЎвЂЎР Р…Р В°" << endl;
        for (int i = 0; i < N; i++)
        {
            A[i][i] = 0;
            for (int j = 0; j < M; j++)
            {
                cout << A[i][j] << " ";
            }
            cout << endl;
        }
    }
    else
    {
        for (int i = 0; i < N; i++)
        {
            for (int j = 0; j < M; j++)
            {
                cout << setw(6) << A[i][j];
            }
            cout << "\n";
            
        }
        cout << " Р Р…Р Вµ РЎРѓР С‘Р СР СР ВµРЎвЂљРЎР‚Р С‘РЎвЂЎР Р…Р В°" << endl;
        return 0;
    }
}


30)#include <iostream>
#include <ctime>
using namespace std;

int main(void)
{
    setlocale(LC_ALL, "Russian");
    enum { N = 8, MAX_RAND = 99 };
   cout << "Р СљР В°РЎвЂљРЎР‚Р С‘РЎвЂ Р В°:" << std::endl;
    srand(size_t(time(NULL)));
    int matrix[N][N];
    for (size_t i(0); i < N; i++) {
        for (size_t j(0); j < N; j++) {
            matrix[i][j] = 1 + rand() % MAX_RAND;
            std::cout << matrix[i][j] << " ";
        }
        std::cout << std::endl;
    }
    std::cout << std::endl;
    
    int max(matrix[0][0]), min[2]{ matrix[0][0], 0 };
    for (size_t i(0); i < N; i++)
        for (size_t j(0); j < N; j++) {
            if (matrix[i][j] > max)
                max = matrix[i][j];
            if (matrix[i][j] < min[0]) {
                min[0] = matrix[i][j];
                min[1] = j;
            }
        }
   
    for (size_t i(0); i < N; i++)
        matrix[i][min[1]] *= max;
   
    std::cout << "Р СљР В°Р С”РЎРѓР С‘Р СР В°Р В»РЎРЉР Р…РЎвЂ№Р в„– РЎРЊР В»Р ВµР СР ВµР Р…РЎвЂљ: " << max << std::endl
        << "Р СњР С•Р СР ВµРЎР‚ Р С”Р С•Р В»Р С•Р Р…Р Р…РЎвЂ№ РЎРѓ Р СР С‘Р Р…Р С‘Р СР В°Р В»РЎРЉР Р…РЎвЂ№Р С РЎРЊР В»Р ВµР СР ВµР Р…РЎвЂљР С•Р С: " << min[1] + 1 << std::endl
        << "Р С™Р С•Р Р…Р ВµРЎвЂЎР Р…Р В°РЎРЏ Р СР В°РЎвЂљРЎР‚Р С‘РЎвЂ Р В°:" << std::endl;
    for (size_t i(0); i < N; i++) {
        for (size_t j(0); j < N; j++)
            std::cout << matrix[i][j] << " ";
        std::cout << std::endl;
    }
 
    return 0;
}

36)#include <iostream>
using namespace std;
/*
* 36. Р вЂќР В°Р Р… РЎРѓР С‘Р СР Р†Р С•Р В»РЎРЉР Р…РЎвЂ№Р в„– Р СР В°РЎРѓРЎРѓР С‘Р Р†, Р С•Р В±РЎР‚Р В°Р В·Р С•Р Р†Р В°Р Р…Р Р…РЎвЂ№Р в„– Р С‘Р В· РЎРѓР В»Р С•Р Р†, РЎР‚Р В°Р В·Р Т‘Р ВµР В»Р ВµР Р…Р Р…РЎвЂ№РЎвЂ¦ Р С—РЎР‚Р С•Р В±Р ВµР В»Р В°Р СР С‘. Р РЋ
Р С‘РЎРѓР С—Р С•Р В»РЎРЉР В·Р С•Р Р†Р В°Р Р…Р С‘Р ВµР С Р С—РЎР‚Р С•РЎвЂ Р ВµР Т‘РЎС“РЎР‚ Р С‘ РЎвЂћРЎС“Р Р…Р С”РЎвЂ Р С‘Р в„– Р Р†РЎвЂ№Р С—Р С•Р В»Р Р…Р С‘РЎвЂљРЎРЉ:
1. Р вЂ™РЎвЂ№Р Т‘Р В°РЎвЂљРЎРЉ Р Р…Р В° Р С—Р ВµРЎвЂЎР В°РЎвЂљРЎРЉ РЎРѓР В»Р С•Р Р†Р В° Р СР В°Р С”РЎРѓР С‘Р СР В°Р В»РЎРЉР Р…Р С•Р в„– Р Т‘Р В»Р С‘Р Р…РЎвЂ№;
2. Р Р€Р Т‘Р В°Р В»Р С‘РЎвЂљРЎРЉ Р С‘Р В· РЎРѓР В»Р С•Р Р†, Р С‘Р СР ВµРЎР‹РЎвЂ°Р С‘РЎвЂ¦ Р Р…Р ВµРЎвЂЎР ВµРЎвЂљР Р…РЎС“РЎР‹ Р Т‘Р В»Р С‘Р Р…РЎС“ РЎРѓРЎР‚Р ВµР Т‘Р Р…РЎР‹РЎР‹ Р В±РЎС“Р С”Р Р†РЎС“;
3. Р СџРЎР‚Р С•Р Р†Р ВµРЎР‚Р С‘РЎвЂљРЎРЉ, Р ВµРЎРѓРЎвЂљРЎРЉ Р В»Р С‘ Р Р† РЎвЂљР ВµР С”РЎРѓРЎвЂљР Вµ РЎРѓР С‘Р СР СР ВµРЎвЂљРЎР‚Р С‘РЎвЂЎР Р…РЎвЂ№Р Вµ РЎРѓР В»Р С•Р Р†Р В°;
4. Р СџР ВµРЎР‚Р ВµР Р…Р ВµРЎРѓРЎвЂљР С‘ Р С—Р ВµРЎР‚Р Р†РЎС“РЎР‹ Р В±РЎС“Р С”Р Р†РЎС“ РЎС“Р С”Р В°Р В·Р В°Р Р…Р Р…Р С•Р С–Р С• РЎРѓР В»Р С•Р Р†Р В° Р Р† Р С”Р С•Р Р…Р ВµРЎвЂ  РЎРѓР В»Р С•Р Р†Р В°;
5. Р С›Р С—РЎР‚Р ВµР Т‘Р ВµР В»Р С‘РЎвЂљРЎРЉ Р С”Р С•Р В»Р С‘РЎвЂЎР ВµРЎРѓРЎвЂљР Р†Р С• РЎРѓР В»Р С•Р Р† Р Р† РЎвЂљР ВµР С”РЎРѓРЎвЂљР Вµ, Р С•Р С”Р В°Р Р…РЎвЂЎР С‘Р Р†Р В°РЎР‹РЎвЂ°Р С‘РЎвЂ¦РЎРѓРЎРЏ Р Р…Р В° Р В·Р В°Р Т‘Р В°Р Р…Р Р…РЎС“РЎР‹ Р В±РЎС“Р С”Р Р†РЎС“.

