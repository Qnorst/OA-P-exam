int max_word_len(const char* s);
bool is_symmetric(const char* s);
//char* remove_max_words(char* s);
int main()
{

    //setlocale(0, "Russian");
    char s[] = "COBOL LISP FORTH APL ALGOL ADA JAVA2";//РЎРѓРЎвЂљРЎР‚Р С•Р С”Р В°, Р Р† Р С”Р С•РЎвЂљР С•Р С•РЎР‚Р С•Р в„– Р С‘Р Т‘Р ВµРЎвЂљ Р С—Р С•Р С‘РЎРѓР С”
    cout << max_word_len(s) << endl << "\n";
    cout << is_symmetric(s) << endl;
}
//max dlina slova
int max_word_len(const char* s)
{
    const char delim[] = " \t\n";//РЎРѓРЎвЂљРЎР‚Р С•Р С”Р В° Р С‘РЎРѓР С”Р С•Р СРЎвЂ№РЎвЂ¦ РЎРѓР С‘Р СР Р†Р С•Р В»Р С•Р Р†
    int n = 0, i = 0;
    while (*s)
    {
        i = std::strspn(s, delim);//Р С—Р С•Р С‘РЎРѓР С” РЎРѓРЎвЂљРЎР‚Р С•Р С”Р С‘ Р Р† Р С—Р С•Р Т‘РЎРѓРЎвЂљРЎР‚Р С•Р С”Р Вµ
        s += i;
        if (!*s)
            break;

        i = std::strcspn(s, delim);
        s += i;
        if (i > n)
            n = i;
    };
    cout << "dlina slova " << i;
    return n;
}
//delete the middle char
int delete_middle_char(const char* s)
{
    const char delim[] = " \t\n";//РЎРѓРЎвЂљРЎР‚Р С•Р С”Р В° Р С‘РЎРѓР С”Р С•Р СРЎвЂ№РЎвЂ¦ РЎРѓР С‘Р СР Р†Р С•Р В»Р С•Р Р†
    int n = 0, i = 0;
    while (*s)
    {
        i = std::strspn(s, delim);//Р С—Р С•Р С‘РЎРѓР С” РЎРѓРЎвЂљРЎР‚Р С•Р С”Р С‘ Р Р† Р С—Р С•Р Т‘РЎРѓРЎвЂљРЎР‚Р С•Р С”Р Вµ
        s += i;
        if (!*s)
            break;

        i = std::strcspn(s, delim);
        s += i;
        if (i > n)
            n = i;
    };
    cout << "dlina slova " << n;
    return n;
}
//symetric

 bool is_symmetric (const char * s)
{
     const char* t = s + strlen(s) - 1;
     while (s < t)
     {
         if (*s++ != *t--)
             return 0;
     }
         
     return 1;
}
