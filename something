int PointX1 = -2, PointX2 = 0, PointX3 = 2, PointY1 = -3, PointY2 = 2, PointY3 = -3;
int AB = (PointX1 - PointX) * (PointY2 - PointY1) - (PointY1 - PointY) * (PointX2 - PointX1);
int BC = (PointX2 - PointX) * (PointY3 - PointY2) - (PointY2 - PointY) * (PointX3 - PointX2);
int CA = (PointX3 - PointX) * (PointY1 - PointY3) - (PointY3 - PointY) * (PointX1 - PointX3);
