float a, b, c;
cin Р’В» a Р’В» b Р’В» c;
if (a == 0)
{
cout Р’В« "x=" Р’В« -c / b;
}
else
{
float d = sqrt(b * b - 4 * a * c);
if (d == 0)
{
cout Р’В« "x = " Р’В« -b / (2 * a);
}
else if (d > 0)
{
float x1 = -b + d / (2 * a), x2 = -b - d / (2 * a);
cout Р’В« "x1=" Р’В« x1 Р’В« " | x2=" Р’В« x2;
}
else
{
cout Р’В« "Р С”Р С•РЎР‚Р Р…Р ВµР в„– Р Р…Р ВµРЎвЂљ";
}
}
}

