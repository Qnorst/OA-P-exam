//19
#include <iostream>

using namespace std;


int main()
{

    int a = 0, max = 0, min = 0;


    do
    {


        cin >> a;


        if (a >= max)
            max = a;
        if (a <= min && a > 0)
            min = a;

    } while (a != 0);
    

    cout <<min << ' '<< max<< endl;



    return 0;
}

