//8
#include <iostream>
#include <cmath>
#include <iomanip>
using namespace std;


int main()
{
    int x, y,x0,y0;
    double r = 0;
    
    cin >> x;
    cin >> y;
    cin >> x0;
    cin >> y0;
    cin >> r;
    r = 2 * abs(r) + 1;
    int xy2 = pow((x - x0),2)  + pow((y - y0),2)  - pow(r,2) ;
    if (xy2 < 0)
    {
        cout << "Vhodit v promezutok ";
    }
    else if (xy2 > 0)
    {
        cout << "NSnaruzhi ";
    }
    else
        cout << "Na";
}

